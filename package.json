{
  "name": "create-an-issue",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "npx ncc run ./src/index.ts",
    "test": "jest --coverage",
    "build": "npx ncc build ./src/index.ts"
  },
  "author": "Jason Etcovitch <jasonetco@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "actions-toolkit": "^6.0.1",
    "front-matter": "^4.0.2",
    "js-yaml": "^3.14.0",
    "nunjucks": "^3.2.2",
    "nunjucks-date-filter": "^0.1.1"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/nunjucks": "^3.1.3",
    "@vercel/ncc": "^0.25.1",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    }
  }
